<div class="container">
    <form action="/clientes/add" method="POST">
    <div class="mb-3">
        <label class="form-label" for="id">ID:</label>
        <input class="form-control" type="number" name="id" id="id" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
    </div>

    <div class="mb-3">
        <label class="form-label" for="nombre">Nombre:</label>
        <input class="form-control" type="text" name="nombre" id="nombre">
    </div>

    <div class="mb-3">
        <label class="form-label" for="direccion">Direccion:</label>
        <input class="form-control" type="text" name="direccion" id="direccion">
    </div>

    <div class="mb-3">
        <label class="form-label" for="correoe">Correo Electronico</label>
        <input class="form-control" type="text" name="correoe" id="correoe">
    </div>



    <div class="mb-3"><button class="btn btn-primary">Agregar</button>
    </div>
</form>
</div>

